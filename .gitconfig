[user]
    name = Augusto Hermosilla
    email = augusto@cronova.dev

[init]
    defaultBranch = main

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate -10
    last = log -1 HEAD
    unstage = reset HEAD --

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    algorithm = histogram
    colorMoved = default

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[credential]
    helper = osxkeychain

[color]
    ui = auto
